{
    "magento": {
        "application": {
            "name": "magento",
            "uid": ":auto",
            "main_domain": "magento.dev",
            "directory": "/vagrant",
            "http_port": "8080",
            "domain_map": {}
        },
        "varnish": {
            "backend": {
                "node2": "node1"
            },
            "balancer": ["node1", "node2"]
        }
    },
    "php": {
        "major_version": "5.4",
        "directives": {

        }
    },
    "php_extensions": {
        "xdebug": {
            "preferred_state": "beta",
            "zend_extensions": ["xdebug.so"],
            "directives": {
                "xdebug.remote_enable": "1",
                "xdebug.remote_port": "9000",
                "xdebug.remote_host": "192.168.6.1"
            }
        }
    },
    "recipes": [
        "mysql::server",
        "magento::application",
        "magento::varnish",
        "magento::redis"
    ],
    "vm": {
        "cpu": 4,
        "memory": 1024,
        "ip": "192.168.6.10",
        "mount_dirs": {
            ".": "/vagrant"
        },
        "mount_dir_options": {
            "type": "rsync"
        }
    }
}
